<h1>Listing tgl_rows</h1>

<table>
  <tr>
    <th>User name</th>
    <th>Email</th>
    <th>Client</th>
    <th>Task</th>
    <th>Description</th>
    <th>Billable</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Tags</th>
    <th>Usd amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tgl_rows.each do |tgl_row| %>
  <tr>
    <td><%= tgl_row.user_name %></td>
    <td><%= tgl_row.email %></td>
    <td><%= tgl_row.client %></td>
    <td><%= tgl_row.task %></td>
    <td><%= tgl_row.description %></td>
    <td><%= tgl_row.billable %></td>
    <td><%= tgl_row.start_date %></td>
    <td><%= tgl_row.end_date %></td>
    <td><%= tgl_row.tags %></td>
    <td><%= tgl_row.usd_amount %></td>
    <td><%= link_to 'Show', tgl_row %></td>
    <td><%= link_to 'Edit', edit_tgl_row_path(tgl_row) %></td>
    <td><%= link_to 'Destroy', tgl_row, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

